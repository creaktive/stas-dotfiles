<Multi_key> <i> <o>             : "ô"   ocircumflex # LATIN SMALL LETTER O WITH CIRCUMFLEX
<Multi_key> <I> <o>             : "ô"   ocircumflex # LATIN SMALL LETTER O WITH CIRCUMFLEX
<Multi_key> <i> <u>             : "û"   ucircumflex # LATIN SMALL LETTER U WITH CIRCUMFLEX
<Multi_key> <I> <u>             : "û"   ucircumflex # LATIN SMALL LETTER U WITH CIRCUMFLEX

<Multi_key> <i> <A>             : "Â"   Acircumflex # LATIN CAPITAL LETTER A WITH CIRCUMFLEX
<Multi_key> <I> <A>             : "Â"   Acircumflex # LATIN CAPITAL LETTER A WITH CIRCUMFLEX
<Multi_key> <i> <E>             : "Ê"   Ecircumflex # LATIN CAPITAL LETTER E WITH CIRCUMFLEX
<Multi_key> <I> <E>             : "Ê"   Ecircumflex # LATIN CAPITAL LETTER E WITH CIRCUMFLEX
<Multi_key> <i> <I>             : "Î"   Icircumflex # LATIN CAPITAL LETTER I WITH CIRCUMFLEX
<Multi_key> <I> <I>             : "Î"   Icircumflex # LATIN CAPITAL LETTER I WITH CIRCUMFLEX
<Multi_key> <i> <O>             : "Ô"   Ocircumflex # LATIN CAPITAL LETTER O WITH CIRCUMFLEX
<Multi_key> <I> <O>             : "Ô"   Ocircumflex # LATIN CAPITAL LETTER O WITH CIRCUMFLEX
<Multi_key> <i> <U>             : "Û"   Ucircumflex # LATIN CAPITAL LETTER U WITH CIRCUMFLEX
<Multi_key> <I> <U>             : "Û"   Ucircumflex # LATIN CAPITAL LETTER U WITH CIRCUMFLEX

# 'n' for tilde'
<Multi_key> <n> <a>             : "ã"   atilde # LATIN SMALL LETTER A WITH TILDE
<Multi_key> <N> <a>             : "ã"   atilde # LATIN SMALL LETTER A WITH TILDE
