<Multi_key> <N> <o>             : "õ"   otilde # LATIN SMALL LETTER O WITH TILDE
<Multi_key> <n> <u>             : "ũ"   utilde # LATIN SMALL LETTER U WITH TILDE
<Multi_key> <N> <u>             : "ũ"   utilde # LATIN SMALL LETTER U WITH TILDE

<Multi_key> <n> <A>             : "Ã"   Atilde # LATIN CAPITAL LETTER A WITH TILDE
<Multi_key> <N> <A>             : "Ã"   Atilde # LATIN CAPITAL LETTER A WITH TILDE
<Multi_key> <n> <E>             : "Ẽ"   Etilde # LATIN CAPITAL LETTER E WITH TILDE
<Multi_key> <N> <E>             : "Ẽ"   Etilde # LATIN CAPITAL LETTER E WITH TILDE
<Multi_key> <n> <I>             : "Ĩ"   Itilde # LATIN CAPITAL LETTER I WITH TILDE
<Multi_key> <N> <I>             : "Ĩ"   Itilde # LATIN CAPITAL LETTER I WITH TILDE
<Multi_key> <n> <O>             : "Õ"   Otilde # LATIN CAPITAL LETTER O WITH TILDE
<Multi_key> <N> <O>             : "Õ"   Otilde # LATIN CAPITAL LETTER O WITH TILDE
<Multi_key> <n> <U>             : "Ũ"   Utilde # LATIN CAPITAL LETTER U WITH TILDE
<Multi_key> <N> <U>             : "Ũ"   Utilde # LATIN CAPITAL LETTER U WITH TILDE

